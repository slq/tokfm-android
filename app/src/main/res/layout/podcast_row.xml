<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/podcast_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/published"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017-06-26 18:00"
        android:textAlignment="textEnd"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/podcast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Przewodnik technologiczny (Karolina Głowacka)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/podcast_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="To nie ludzie dominują w internecie (powtórka programu)" />


